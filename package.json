{
  "name": "short-url",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "db:setup": "mkdir -p .out && touch .out/local-core.sqlite3",
    "db:makemigration": "dotenv -e .env.production -- drizzle-kit generate --config=./db/core.drizzle.config.ts",
    "db:migrate": "dotenv -e .dev.vars -- drizzle-kit push --config=./db/core.drizzle.config.ts",
    "db:prod:migrate": "dotenv -e .env.production -- drizzle-kit migrate --config=./db/core.drizzle.config.ts",
    "db:start": "turso dev --db-file .out/local-core.sqlite3",
    "db:populate": "turso db shell http://127.0.0.1:8080 < .out/dump.sql",
    "format": "prettier --check --ignore-path .gitignore .",
    "format:fix": "prettier --write --ignore-path .gitignore .",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "health-check": "curl -f http://localhost:3000/health || exit 1",
    "docker:build": "docker build -t hono-app .",
    "docker:run": "docker run -p 3000:3000 hono-app",
    "docker:build-optimized": "docker build --no-cache --pull -t hono-app:latest .",
    "docker:analyze": "docker images hono-app --format 'table {{.Repository}}\\t{{.Tag}}\\t{{.Size}}'"
  },
  "dependencies": {
    "@clerk/backend": "^2.26.0",
    "@hono/clerk-auth": "^3.0.3",
    "@hono/zod-validator": "^0.7.5",
    "@libsql/client": "^0.15.15",
    "crypto-js": "^4.2.0",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.8",
    "posthog-node": "^5.17.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@types/crypto-js": "^4.2.2",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "typed-htmx": "^0.3.1"
  }
}
